{
  "name": "ai-research-agent-backend",
  "version": "1.0.0",
  "private": true,
  "description": "Background-queued research API with Prisma/Postgres, BullMQ/Redis, SSE logs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "worker": "tsx src/worker/researchWorker.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "start:worker": "node dist/worker/researchWorker.js",
    "prisma:generate": "prisma generate",
    "db:push": "prisma db push",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.12.2",
    "bullmq": "^5.58.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "ioredis": "^5.7.0",
    "pino": "^9.10.0",
    "pino-http": "^9.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "prisma": "^5.22.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
